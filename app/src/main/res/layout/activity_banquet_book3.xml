<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BanquetBook3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txvTitle.BanquetBook3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Thank_verification"
            android:textSize="@dimen/Title_textSize"
            android:gravity="center" />

        <TextView
            android:id="@+id/txvIntro.BanquetBook3"
            android:layout_below="@+id/txvTitle.BanquetBook3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="@string/Intro_BookBanquet3"
            android:textSize="@dimen/Intro_textSize"
            android:gravity="center" />

        <RelativeLayout
            android:id="@+id/lytData.BanquetBook3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txvIntro.BanquetBook3">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txvName.BanquetBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txvMobileNo.BanquetBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:layout_below="@+id/txvName.BanquetBook3"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txvShowTime.BanquetBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:layout_below="@+id/txvMobileNo.BanquetBook3"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txvShowDate.BanquetBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:layout_below="@+id/txvShowTime.BanquetBook3"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txvPurpose.BanquetBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:layout_below="@+id/txvShowDate.BanquetBook3"
                android:textSize="30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txvRegId.BanquetBook3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:layout_marginVertical="10sp"
                android:layout_below="@+id/txvPurpose.BanquetBook3"
                android:textSize="30sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/lytData.BanquetBook3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnCancel.BanquetBook3"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="@string/cancel"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnSave.BanquetBook3"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:text="@string/save"
                android:textSize="30sp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>